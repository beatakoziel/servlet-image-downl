<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>ServletTutorial</display-name>


    <servlet>
        <servlet-name>TextServlet</servlet-name>
        <servlet-class>servlet.TextServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>HyperTextServlet</servlet-name>
        <servlet-class>servlet.HyperTextServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CheckHyperServlet</servlet-name>
        <servlet-class>servlet.CheckHyperServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>FileServlet</servlet-name>
        <servlet-class>servlet.FileServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DateServlet</servlet-name>
        <servlet-class>servlet.DateServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>BmiServlet</servlet-name>
        <servlet-class>servlet.BmiServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TextServlet</servlet-name>
        <url-pattern>/text</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HyperTextServlet</servlet-name>
        <url-pattern>/hyper</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CheckHyperServlet</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>FileServlet</servlet-name>
        <url-pattern>/flower</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DateServlet</servlet-name>
        <url-pattern>/date</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BmiServlet</servlet-name>
        <url-pattern>/bmi</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>